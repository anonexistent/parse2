<Window x:Class="parse2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:parse2" 
        xmlns:viewmodel="clr-namespace:parse2.ViewModel"
        mc:Ignorable="d"
        Title="parse v1" Height="450" Width="800" Background="AliceBlue" Icon="/View/weather-cloudy.png">

    <Window.DataContext>
        <viewmodel:AppViewModel/>
    </Window.DataContext>

    <Grid><!--ShowGridLines="true"-->        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        

        <ListBox Margin="45,45,20,45" Grid.Column="0" ItemsSource="{Binding Cities}"
                 SelectedItem="{Binding selectedcity}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=City}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Margin="20,45,45,45" Background="Bisque" Grid.Column="1" DataContext="{Binding selectedcity}">
            <TextBlock Text="current obj" TextAlignment="Center" FontWeight="Bold" FontSize="20" Background="Beige"/>
            <TextBlock Text="city" FontSize="18"/>
            <TextBox Background="White" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="°C" FontSize="18"/>
            <TextBox Background="White" Text="{Binding Temp, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Button Grid.Row="1" Margin="50,-5,50,10" Content="go" Cursor="Hand" Command="{Binding }"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="50,-5,50,10" Content="stop" Cursor="Hand"/>

        <TextBox Grid.Row="2" Grid.ColumnSpan="2" Margin="150,5,150,5" TextAlignment="Center" FontSize="18"/>
        
        <Border Margin="25" Grid.ColumnSpan="2" CornerRadius="3" BorderThickness="2" BorderBrush="red">
            <TextBlock x:Name="testTB0" Margin="15" Background="Beige" TextAlignment="Center" Text="{Binding Testtoo}" Visibility="Visible"/>  <!-- Text="{Binding click}" -->
        </Border>
    </Grid>
</Window>
